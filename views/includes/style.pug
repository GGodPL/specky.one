style.
    body {
        background: black;
        color: white;
    }

    #page {
        margin-bottom: 100px;
    }

    #footer {
        position: fixed;
        bottom:0px;
        left: 0px;
        width: 100%;
        height:64px;
        background:#ff00aa;
        text-align: center;
        line-height: 64px;
        font-size: 24px;
        font-weight: bold;
        color: white;
        z-index: 999;
        cursor: pointer;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        top: 0px;
        height: 25%;
        width: auto;
    }

    #popup {
        position: absolute;
        top: 0;
        left: 0;
        width: fit-content;
        height: fit-content;
        background: #FF00AA50;
        z-index: 9999;
        border-radius: 10px;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        font-size: 16px;
        font-family: sans-serif;
        text-decoration: none;
        font-weight: bold;
        text-align: center;
        border: 2px dotted #ffffff;
        overflow: hidden;
        display: none;
        pointer-events: none;
    }
